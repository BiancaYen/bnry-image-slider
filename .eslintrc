{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "env": {
    "browser": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "arrow-body-style": 0,
    "comma-dangle": ["error", "never"],
    "indent": ["error", 4, { "SwitchCase": 1 }],
    "jsx-a11y/href-no-hash": "off",
    "linebreak-style": 0,
    "max-len": [2, 200],
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
    "react/button-has-type" : 0,
    "react/forbid-prop-types": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-indent": ["error", 4],
    "react/jsx-indent-props": ["error", 4],
    "react/sort-comp": [2, {
      "order": [
        "constructor",
        "state",
        "static-methods",
        "everything-else",
        "lifecycle",
        "rendering"
      ],
      "groups": {
        "static-methods": [
          "^((?!Render).)*$"
        ],
        "rendering": [
          "/Render$/",
          "render"
        ]
      }
    }],
    "react/sort-prop-types": [2, {
      "callbacksLast": true,
      "ignoreCase": false,
      "requiredFirst": false
    }]
  }
}
